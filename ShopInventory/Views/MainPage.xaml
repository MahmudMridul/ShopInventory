<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShopInventory.Views.MainPage"
             Title="{Binding Title}">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30,0" VerticalOptions="Center">

            <Label x:Name="WelcomeLabel" 
                   Text="Welcome to Shop Inventory"
                   FontSize="32"
                   HorizontalOptions="Center"
                   TextColor="{StaticResource Primary}" />

            <Label Text="Manage your shop's inventory efficiently"
                   FontSize="18"
                   HorizontalOptions="Center"
                   TextColor="{StaticResource Secondary}" />

            <Button x:Name="PurchasedItemsBtn"
                    Text="Purchased Items"
                    FontSize="18"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    Command="{Binding NavigateToPurchasedItemsCommand}"
                    WidthRequest="200"
                    HeightRequest="50" />

            <Button x:Name="SoldItemsBtn"
                    Text="Sold Items"
                    FontSize="18"
                    BackgroundColor="{StaticResource Secondary}"
                    TextColor="White"
                    Command="{Binding NavigateToSoldItemsCommand}"
                    WidthRequest="200"
                    HeightRequest="50" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>